<!DOCTYPE html>
<html>
  <head>
    <% utf8_charset %>
    <title><%="Kindmetrics - #{page_title}"%></title>
    <% css_link asset("css/app.css"), data_turbolinks_track: "reload" %>
    <% js_link asset("js/app.js"), defer: "true", data_turbolinks_track: "reload" %>
    <script src="http://localhost:5000/js/track.js" defer="true" data-domain="kindmetrics.io" data-turbolinks-track="reload"></script>
    <% meta name: "turbolinks-cache-control", content: "no-cache" %>
    <% csrf_meta_tags %>
    <% responsive_meta_tag %>
  </head>

  <body>
    <div class="container-md mx-auto px-10 sm:px-20 md:px-30">
      <%=mount Shared::FlashMessages.new(context.flash) %>
      <% render_signed_in_user %>
      <% content %>
    </div>
  </body>
</html>
